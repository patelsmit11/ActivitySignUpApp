@page "/subscription"

<h5>Welcome to the Activity Sign up form</h5>
<br />

@if (Activities == null)
{
    <div class="alert alert-info" role="alert">
        <strong>Loading Activities!!!</strong> Please wait...
    </div>
}
else
{
    <EditForm Model="Subscription" OnValidSubmit="HandleValidSubmit">

        <FluentValidationValidator />

        <div class="row">
            <div class="form-group col-2">
                First Name:
            </div>
            <div class="form-group col-4">
                <InputText @bind-Value="Subscription.FirstName" placeholder="First Name"></InputText>
                <ValidationMessage For="@(() => Subscription.FirstName)" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-2">
                Last Name:
            </div>
            <div class="form-group col-4">
                <InputText @bind-Value="Subscription.LastName" placeholder="Last Name"></InputText>
                <ValidationMessage For="@(() => Subscription.LastName)" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-2">
                Email:
            </div>
            <div class="form-group col-4">
                <InputText @bind-Value="Subscription.Email" placeholder="Email"></InputText>
                <ValidationMessage For="@(() => Subscription.Email)" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-2">
                Activity Type:
            </div>
            <div class="form-group col-4">
                <InputSelect @bind-Value="Subscription.ActivityId">
                    @foreach (var activity in Activities)
                        {
                        <option value="@activity.ActivityId">@activity.ActivityName</option>
                        }
                </InputSelect>
                <ValidationMessage For="@(() => Subscription.ActivityId)" />
            </div>
        </div>

        <div class="row">
            <div class="form-group col-2">
                Comments:
            </div>
            <div class="form-group col-auto">
                <InputTextArea @bind-Value="Subscription.Comments" placeholder="Comments" cols="70" rows="3"></InputTextArea>
                <ValidationMessage For="@(() => Subscription.Comments)" />
            </div>
        </div>

        <div class="row">
            <div class="form-group col-2"></div>
            <div class="form-group col-auto">
                <button class="btn btn-success">Save</button>
            </div>
        </div>

    </EditForm>
}
