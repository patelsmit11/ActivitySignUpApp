@page "/activity"
@page "/activity/{activityid:int}"

<h5>Add a New Activity</h5>
<br />

<EditForm Model="Activity" OnValidSubmit="HandleValidSubmit">

    <FluentValidationValidator />

    <div class="row">
        <div class="form-group col-2">
            Activity Name:
        </div>
        <div class="form-group col-4">
            <InputText @bind-Value="Activity.ActivityName" placeholder="Activity Name"></InputText>
            <ValidationMessage For="@(() => Activity.ActivityName)" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-2">
            Activity Type:
        </div>
        <div class="form-group col-4">
            <InputSelect @bind-Value="Activity.ActivityType" DisplayName="Activity Type">
                @foreach (var value in Enum.GetValues(typeof(ActivityTypes)))
                {
                    <option>@value</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => Activity.ActivityType)" />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-2"></div>
        <div class="form-group col-auto">
            <button class="btn btn-success">Save</button>
        </div>
    </div>

</EditForm>